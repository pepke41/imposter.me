<div class="header-buttons row">
<%= link_to "Back to Post List", posts_path, class: "new_post waves-effect waves-light btn col s2 offset-s2" %>
<%= link_to "Delete", post_path(@post), class: "new_post waves-effect waves-light btn col s2 offset-s1", method: :delete, data: {confirm: "Really delete the post?"}%>
<%= link_to "Edit", edit_post_path(@post), class: "new_post waves-effect waves-light btn col s2 offset-s1" %>
<br>
<br>
</div>

<div id="comment-card" class="row">
    <div class="col s12 m12">
        <div class="card white">
            <div class="card-content default-text">
                <span class="card-title"><%= @post.title %></span>
                <p><%= @post.body %></p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s12 m12">
        <ul class="collection with-header hoverable">
            <li class="collection-header"><h5>Comments (<%= @post.comments.size %>)</h5></li>
            <%= render partial: 'posts/comment', collection: @post.comments %>
        </ul>
    </div>
</div>

<%= render partial: 'comments/form' %>
