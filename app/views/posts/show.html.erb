<%= link_to "Back to Post List", posts_path, class: "new_post waves-effect waves-light btn" %>
<%= link_to "Delete", post_path(@post), class: "new_post waves-effect waves-light btn", method: :delete, data: {confirm: "Really delete the post?"}%>
<%= link_to "Edit", edit_post_path(@post), class: "new_post waves-effect waves-light btn" %>

<div id="comment-card" class="row">
    <div class="col s12 m12">
        <div class="card white">
            <div class="card-content default-text">
                <span class="card-title"><%= @post.title %></span>
                <p><%= @post.body %></p>
            </div>
        </div>
    </div>
</div>

<ul class="collection with-header">
    <li class="collection-header"><h5>Comments (<%= @post.comments.size %>)</h5></li>
    <%= render partial: 'posts/comment', collection: @post.comments %>
</ul>

<%= render partial: 'comments/form' %>
