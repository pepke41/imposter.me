<%= form_for(@post) do |f| %>
<ul>
<% @post.errors.full_messages.each do |error| %>
	<li><%= error %></li>
<% end %>
</ul>
<p>
	<%= f.label :title %> <br />
	<%= f.text_field :title %>
</p>
<p>
	<%= f.label :post_author_name, "Author:" %><br />
	<%= f.text_field :post_author_name %>
</p>
	<%= f.label :body %><br />
	<%= f.text_area :body %>
</p>
<p>
    <%= f.submit class:"btn waves-effect waves-light"%>
</p>

<% end %>
