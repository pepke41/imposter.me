<div class="row">
    <div class="col s12 m12">
        <div class="card white">
            <div class="card-content default-text">
                <span class="card-title">Post a Comment</span>
                <%= form_for [@post, @comment] do |f| %>
	                <p>
		                <%= f.label :author_name, "Your Name" %><br />
                        <%= f.text_field :author_name, class:"input-field col s6"%>
                        <br>
                        <br>
                        <br>
	                </p>
	                <p>
		                <%= f.label :body, "Your Comment" %><br/>
		                <%= f.text_area :body, class:"materialize-textarea" %>
	                </p>
                    <p>
		                <%= f.submit class:"btn waves-effect waves-light"%>
	                </p>
                <% end %>
            </div>
        </div>
    </div>
</div>


